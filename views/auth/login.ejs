<div class="card text-center" id="loginForm">
  <div class="card-header">
    <span class="formTitle">Enter Login Information</span>
  </div>
  <div class="card-body">
    <form action="/auth/login" method="POST">
      <div class="loginRow row g-3">
        <div class="col">
        <input type="name" name ="user_name"  class="form-control" placeholder="Username" id="auth-user_name">
      </div>
    </div>
      <div class="loginRow row g-3">
        <div class="col">
        <input type="password" id="auth-password"  class="form-control" placeholder="Password" name="password"></input>
      </div>
    </div>
      <button type="submit" class="btn btn-primary">Log In</button>
    </form>
  </div>
</div>

