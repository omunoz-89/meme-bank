<form action="/meme" method="POST">
  <div id="newMeme" class="container-fluid px-4">
    <div class="row justify-content-center gx-5">
      <div class="col-sm-6">
        <img
          id="selectedMeme"
          src="<%= meme0.url %>"
          class="rounded shadow mb-5 bg-body rounded"
        />
      </div>
      <div class="col-sm-4">
        <input
          type="text"
          id="memeId"
          name="memeId"
          class="form-control"
          value="<%= meme0.id %>"
          hidden
        />
        <div id="top">
          <label for="top_text" class="form-label">Top Text</label>
          <input
            type="text"
            id="top_text"
            name="top_text"
            class="form-control"
          />
        </div>
        <div id="bottom">
          <label for="bottom_text" class="form-label">Bottom Text</label>
          <input
            type="text"
            id="bottom_text"
            name="bottom_text"
            class="form-control"
          />
        </div>
        <div class="form-check">
          <input
            class="form-check-input"
            type="checkbox"
            name="private"
            id="private"
          />
          <label class="form-check-label" for="private"> Private </label>
          <button type="submit" class="btn btn-primary" id="generate">
            Generate
          </button>
        </div>
      </div>
    </div>
  </div>
</form>
<div id="templates" class="container">
  <div class="row row-cols-auto">
    <% meme.forEach(meme => { %>
    <div class="col-sm-3">
      <div class="card shadow mb-5 bg-body rounded">
        <a
          href="#"
          onclick="createMeme(this)"
          id="<%= meme.id %>"
          name="<%= meme.url %>"
          ><img
            id="<%= meme.id %>"
            src="<%= meme.url %>"
            class="memeImg card-img-top rounded"
        /></a>
        <div class="card-body">
          <h5 class="card-title"><%= meme.name %></h5>
          <a
            href="#"
            class="btn btn-primary"
            id="<%= meme.id %>"
            name="<%= meme.url %>"
            onclick="createMeme(this)"
            >Create Meme</a
          >
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</div>
